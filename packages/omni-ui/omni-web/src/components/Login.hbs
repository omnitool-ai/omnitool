<div class="flex justify-center z-20 w-full h-full">
  <div
    x-show="open"
    role="dialog"
    aria-modal="true"
    x-id="['modal-title']"
    :aria-labelledby="$id('modal-title')"
    class="fixed inset-0 z-10 overflow-y-auto"
  >
    <div
      class="flex h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
    >
      <div
        x-show="open"
        x-transition.opacity
        class="fixed inset-0 bg-gray-200 bg-opacity-100 z-30 py-16"
      >
        <div
          class="bg-white w-5/6 md:w-3/4 lg:w-2/3 xl:w-[500px] 2xl:w-[550px] mt-8 mx-auto px-16 py-8 rounded-lg shadow-2xl"
        >
          <h2
            class="text-center text-2xl font-bold tracking-wide text-gray-800"
            x-text="newUserRegistration ? 'Sign Up' : 'Login'"
          >Login</h2>
          <div
            class="flex justify-center text-center text-sm text-gray-600 mt-4"
          >
            <p class="mr-2">
              Welcome to Omnitool.ai, your open source AI desktop. 
              Discover, learn, evaluate and build with thousands of generative AI models.</p>
          </div>

          <form
            class="my-8 text-sm"
            @submit.prevent="isSubmitting=true; login()"
            @keyup.enter="login()"
          >
            <div class="flex flex-col my-4">
              <label for="username" class="text-gray-700">User name</label>
              <input
                x-model="input.username"
                x-bind:class="{'is-invalid': error.username}"
                autofocus
                id="username"
                name="username"
                type="text"
                autocomplete="username"
                required=""
                class="mt-2 relative block w-full border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-gray-600 focus:outline-none focus:ring-gray-600 sm:text-sm"
                placeholder="User name"
              />
              <div
                x-show="error.username"
                x-text="error.username"
                class="invalid-feedback"
              ></div>
            </div>

            <div class="flex flex-col my-4">
              <label for="password" class="text-gray-700">Password</label>
              <div
                x-data="{ show: false }"
                class="relative flex items-center mt-2"
              >
                <input
                  x-model="input.password"
                  x-bind:class="{'is-invalid': error.password}"
                  id="password"
                  name="password"
                  :type=" show ? 'text': 'password'"
                  autocomplete="current-password"
                  required=""
                  class="relative block w-full border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-gray-600 focus:outline-none focus:ring-gray-600 sm:text-sm"
                  placeholder="Password"
                />
                <div
                  x-show="error.password"
                  x-text="error.password"
                  class="invalid-feedback"
                ></div>
                <button
                  @click="show = !show"
                  type="button"
                  class="absolute right-2 bg-transparent flex items-center justify-center text-gray-700"
                >
                  <svg
                    x-show="!show"
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"
                    >
                    </path>
                  </svg>

                  <svg
                    x-show="show"
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    style="display: none;"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                    >
                    </path>
                  </svg>
                </button>
              </div>
            </div>
            <div class="my-4 flex items-center justify-center space-x-4">
              <button
                type="submit"
                class="inline-flex w-auto cursor-pointer select-none appearance-none items-center py-2 justify-center bg-blue-600 hover:bg-blue-700 rounded-lg text-gray-100 hover:shadow-xl transition duration-150 uppercase disabled:pointer-events-none disabled:opacity-75"
                :disabled="isSubmitting"
                :class="{'opacity-75 pointer-events-none px-8 gap-x-2': isSubmitting, 'px-11': !isSubmitting}"
              >
                <!-- Show spinner when loading -->
                <div x-show="isSubmitting">
